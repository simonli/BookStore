@model SettingsComponentViewModel

<div class="row">
    <div class="col-md-2 col-md-offset-10">
        <a asp-controller="Account" asp-action="ProfilePush" asp-route-username="@Model.User.Username">
            <span class="text-muted"><i class="fa fa-reply-all"></i> 返回个人中心</span>
        </a>
    </div>
</div>

<div class="row" style="margin-bottom: 10px; border-bottom: 1px solid #ddd;">
    <div class="col-md-12">
        <div class="btn-group" role="group">
            <a type="button" role="button" class="btn @Html.ActivePage("SettingsUsername", "Account") btn-switcher" asp-controller="Account" asp-action="SettingsUsername">&nbsp;&nbsp;修改用户名&nbsp;&nbsp;</a>
            <a type="button" role="button" class="btn @Html.ActivePage("ChangeEmail", "Account") btn-switcher" asp-controller="Account" asp-action="ChangeEmail">&nbsp;&nbsp;修改登录邮箱&nbsp;&nbsp;</a>
            <a type="button" role="button" class="btn @Html.ActivePage("ChangePassword", "Account") btn-switcher" asp-controller="Account" asp-action="ChangePassword">&nbsp;&nbsp;修改密码&nbsp;&nbsp;</a>
            <a type="button" role="button" class="btn @Html.ActivePage("SettingsAvatar", "Account") btn-switcher" asp-controller="Account" asp-action="SettingsAvatar">&nbsp;&nbsp;头像设置&nbsp;&nbsp;</a>
            <a type="button" role="button" class="btn @Html.ActivePage("SettingsPush", "Account") btn-switcher" asp-controller="Account" asp-action="SettingsPush">&nbsp;&nbsp;推送设置&nbsp;&nbsp;</a>
            <a type="button" role="button" class="btn @Html.ActivePage("SettingsPro", "Account") btn-switcher" asp-controller="Account" asp-action="SettingsPro">&nbsp;&nbsp;升级到Pro&nbsp;&nbsp;</a>

        </div>
    </div>
</div>