@model ProfileViewModel
@using BookStore.Utility
@using Microsoft.CodeAnalysis.CSharp.Syntax
@{
    var navEditionClass = "";
    var navPushClass = "";
    var navDownloadClass = "";
    var navCheckinClass = "";
    var navCommentClass = "";
    var navFavoriteClass = "";
    var navChecked = ViewData["NavChecked"].ToString();
    switch (navChecked)
    {
        case "edition":
            navEditionClass = "active";
            break;
        case "push":
            navPushClass = "active";
            break;
        case "download":
            navDownloadClass = "active";
            break;
        case "checkin":
            navCheckinClass = "active";
            break;
        case "comment":
            navCommentClass = "active";
            break;
        case "favorite":
            navFavoriteClass = "active";
            break;
    }

    <div class="row">
        <div class="col-md-3">
            <a href="@Url.Action("SettingsAvatar", "Account")" title="@Model.User.Username">
                <img class="pull-left img-circle" src="~/static/avatars/@Model.User.Avatar" style="width: 100px; height: 100px;" alt="@Model.User.Username"/>
            </a>
        </div>
        <div class="col-md-6">
            <h3>@Model.User.Username</h3>
            <p class="text-muted">账号类型: @Utils.GetEnumDescription(Model.User.UserType)</p>
            <p class="text-muted">加入时间: @Model.User.CreateTime.ToString("yyyy-MM-dd")</p>
            @{
                if (Model.IsLogined)
                {
                    <a class="btn btn-info btn-sm" href="@Url.Action("SettingsAvatar", "Account")"><i class="fa fa-sliders" aria-hidden="true"></i>设置</a>
                }
            }
        </div>
    </div>
    <hr/>
    <p>用户名：@Model.User.Username, 剩余积分：0,今日下载：0, 今日推送：0</p>
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills">
                <li class="@navEditionClass">
                    <a href="@Url.Action("ProfileEdition", "Account")">上传</a>
                </li>
                <li class='@navPushClass'>
                    <a href="@Url.Action("ProfilePush", "Account")">推送</a>
                </li>
                <li class='@navDownloadClass'>
                    <a href="@Url.Action("ProfileDownload", "Account")">下载</a>
                </li>
                <li class='@navCommentClass'>
                    <a href="@Url.Action("ProfileComment", "Account")">评论</a>
                </li>
                <li class='@navFavoriteClass'>
                    <a href="@Url.Action("ProfileFavorite", "Account")">收藏</a>
                </li>
                <li class='@navCheckinClass'>
                    <a href="@Url.Action("ProfileCheckin", "Account")">签到</a>
                </li>
            </ul>
        </div>
    </div>
}