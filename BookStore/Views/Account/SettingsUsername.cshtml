@model SettingsUsernameViewModel
@{
    ViewData["Title"] = "修改用户名";
}

<vc:settings user="Model.User"></vc:settings>


<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <h4>你的当前推送邮箱:</h4>
                <h3 class="text-danger">@Model.User.Username@@@Model.PushmainDomain</h3>
                <div class="alert alert-warning">
                    <h4>注意:</h4>
                    如果你修改用户名,本站为你分配的上述推送邮箱也会随之变更.<br>
                    Kindle用户需要登录亚马逊网站,将新邮箱添加到认可邮箱列表.
                </div>
            </div>
            <div class="form-group">
                <i class="fa fa-user-circle-o fa-fw"></i>
                <label asp-for="Username" class="control-label">新的用户名</label>
                <input asp-for="Username" class="form-control"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check-square-o fa-2x"></i> 提交
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
