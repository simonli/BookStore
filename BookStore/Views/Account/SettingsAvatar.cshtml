@model BookStore.Models.SettingsAvatarViewModel
@{
    ViewData["Title"] = "SettingsAvatar";
}

<div class="row">
    <div class="col-md-3">
        <h5>你当前头像:</h5>
        <h4 class="text-danger"><img src="~/static/avatars/@Model.CurrentAvatar" style="width:150px;height:150px;" class="img-circle" alt="@Model.CurrentAvatar" /></h4>
        <form asp-action="SettingsAvatar" enctype="multipart/form-data"  method="post" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <i class="fa fa-user-circle-o fa-fw"></i>
                <label asp-for="AvatarFile" class="control-label">选择你的新头像:</label>
                <input asp-for="AvatarFile" type="file" class="form-control" />
                <span asp-validation-for="AvatarFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check-square-o fa-2x"></i> 上传
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
