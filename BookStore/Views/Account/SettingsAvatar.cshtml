@model SettingsAvatarViewModel
@inject UserUtil UserUtil
@{
    ViewData["Title"] = "修改头像";
}
<vc:settings user="Model.User"></vc:settings>

<div class="row">
    <div class="col-md-3">
        <h5>你当前头像:</h5>
        <h4 class="text-danger"><img src="@UserUtil.GetAvatar(Model.User.Avatar)"  class="img-circle avatar-medium" alt="@Model.CurrentAvatar" ></h4>
        <form asp-action="SettingsAvatar" enctype="multipart/form-data"  method="post" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <i class="fa fa-user-circle-o fa-fw"></i>
                <label asp-for="AvatarFile" class="control-label">选择你的新头像:</label>
                <input asp-for="AvatarFile" type="file" class="form-control" autofocus />
                <span asp-validation-for="AvatarFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">
                    <i class="fa fa-check-circle"></i> 提交 
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
