@model ProfileViewModel
@using BookStore.Utility
@{
    ViewData["Title"] = "个人中心";
}
<div class="row">
    <div class="col-md-3">
        <a href="@Url.Action("SettingsAvatar", "Account")" title="@Model.User.Username">
            <img class="pull-left img-circle" src="@Model.User.Avatar" alt="@Model.User.Username"/>
        </a>
    </div>
    <div class="col-md-6">
        <h3>@Model.User.Username</h3>
        <p class="text-muted">账号类型: @Utils.GetEnumDescription(Model.User.UserType)</p>
        <p class="text-muted">加入时间: @Model.User.CreateTime.ToString("yyyy-MM-dd")</p>
    </div>
</div>

